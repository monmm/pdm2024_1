<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Encabezado -->
    <LinearLayout
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FFC107"
            android:scaleType="center"
            android:src="@drawable/logo"
            android:contentDescription="Logo App">
        </ImageView>

        <TextView
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFC107"
            android:shadowColor="#009688"
            android:text="Petty"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#387051"
            android:textColorHighlight="#FFFFFF"
            android:textDirection="firstStrongRtl"
            android:textSize="80sp" />
    </LinearLayout>

    <!-- Sección de Registro -->
    <TextView
        android:id="@+id/registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:text="Registro" />

    <!-- Perfil -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/foto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/profile"
            android:contentDescription="Imagen de perfil" />

        <!-- Sección de Mascota -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="16dp">

            <TextView
                android:id="@+id/mascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Nombre de la mascota" />

            <EditText
                android:id="@+id/mascota_input"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:textColorHint="#626262"
                android:hint="Apodo"
                android:autofillHints="name"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/sexo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Sexo:" />

                <RadioButton
                    android:id="@+id/macho"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="M" />

                <RadioButton
                    android:id="@+id/hembra"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="H" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/nacimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:text="Fecha de Nacimiento o Registro" />

    <EditText
        android:id="@+id/nacimiento_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="date"
        android:ems="10"
        android:textColorHint="#626262"
        android:hint="dd/mm/yyyy"
        android:autofillHints="creditCardExpirationDate"/>

    <TextView
        android:id="@+id/raza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:text="Raza" />

    <EditText
        android:id="@+id/raza_input"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="text"
        android:textColorHint="#626262"
        android:hint="Raza o especie"
        android:autofillHints="name"/>


    <TextView
        android:id="@+id/dueno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:text="Dueño" />

    <EditText
        android:id="@+id/dueno_input"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="text"
        android:textColorHint="#626262"
        android:hint="Nombre completo"
        android:autofillHints="name"/>

    <TextView
        android:id="@+id/tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:text="Teléfono" />

    <EditText
        android:id="@+id/tel_input"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="phone"
        android:ems="10"
        android:textColorHint="#626262"
        android:hint="(+52) 55 XX XX XX XX"
        android:autofillHints="phone"/>

    <TextView
        android:id="@+id/dir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:text="Dirección" />

    <EditText
        android:id="@+id/dir_input"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="text"
        android:textColorHint="#626262"
        android:hint="Calle X #0000"
        android:autofillHints="name"/>

    <TextView
        android:id="@+id/cp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:text="Código Postal" />

    <EditText
        android:id="@+id/cp_input"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="number"
        android:ems="5"
        android:textColorHint="#626262"
        android:hint="CP: 00000"
        android:autofillHints="postalCode"/>


    <!-- Alineamos los botones horizontalmente -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:text="Cancelar" />

        <Button
            android:id="@+id/registrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Registrar" />

    </LinearLayout>


</LinearLayout>